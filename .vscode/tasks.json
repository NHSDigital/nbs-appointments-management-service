{
  // See https://go.microsoft.com/fwlink/?LinkId=733558
  // for the documentation about the tasks.json format
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Start local development containers",
      "type": "docker-compose",
      "dockerCompose": {
        "up": {
          "detached": true,
          "build": true,
          "services": ["cosmos", "mock-api", "oidc-server"]
        },
        "files": ["docker-compose.yml"]
      }
    },
    {
      "label": "Start cosmos container",
      "type": "docker-compose",
      "dockerCompose": {
        "up": {
          "detached": true,
          "build": true,
          "services": ["cosmos"]
        },
        "files": ["docker-compose.yml"]
      }
    },
    {
      "label": "Clean Cosmos Db Seeder",
      "command": "dotnet",
      "type": "process",
      "options": {
        "cwd": "mock-data/CosmosDbSeeder/"
      },
      "args": ["clean", "CosmosDbSeeder.csproj"],
      "problemMatcher": "$msCompile"
    },
    {
      "label": "Seed Cosmos",
      "command": "dotnet",
      "type": "process",
      "options": {
        "cwd": "mock-data/CosmosDbSeeder/"
      },
      "args": ["run", "CosmosDbSeeder.csproj"],
      "problemMatcher": "$msCompile",
      "dependsOrder": "sequence",
      "dependsOn": ["Clean Cosmos Db Seeder"]
    }
  ]
}
