FROM mcr.microsoft.com/dotnet/sdk:8.0 AS build

WORKDIR /App

COPY ./data/CapacityDataExtract ./data/CapacityDataExtract
COPY ./data/DataExtract ./data/DataExtract
COPY ./src/api/Nhs.Appointments.Audit/ ./src/api/Nhs.Appointments.Audit/
COPY ./src/api/Nhs.Appointments.Persistance/ ./src/api/Nhs.Appointments.Persistance/
COPY ./src/api/Nhs.Appointments.Core/ ./src/api/Nhs.Appointments.Core/
COPY ./src/libraries/Nbs.MeshClient/ ./src/libraries/Nbs.MeshClient/
RUN dotnet restore data/CapacityDataExtract/CapacityDataExtracts.csproj

RUN dotnet publish data/CapacityDataExtract/CapacityDataExtracts.csproj -o out

FROM mcr.microsoft.com/dotnet/aspnet:8.0
WORKDIR /App
COPY --from=build /App/out .

ENTRYPOINT ["dotnet", "CapacityDataExtracts.dll"]