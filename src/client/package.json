{
  "name": "manage-your-appointments",
  "version": "0.1.0",
  "private": true,
  "engines": {
    "node": "^20.0.0",
    "npm": ">=10.7.0"
  },
  "scripts": {
    "prepare": "cd ../../ && husky src/client/.husky",
    "tsc": "tsc --noEmit",
    "dev": "next dev",
    "build": "next build",
    "start": "next build && next start",
    "clean:next": "rimraf .next",
    "clean:full": "rimraf node_modules .next",
    "lint": "eslint **/*.{ts,tsx}",
    "format:check": "prettier --check \"**/*.{js,jsx,ts,tsx,css,scss,html}\"",
    "format": "prettier --write \"**/*.{js,jsx,ts,tsx,css,scss,html}\"",
    "stylelint": "stylelint --fix",
    "test": "jest",
    "test:ci": "jest --reporters=jest-junit --reporters=default",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui"
  },
  "dependencies": {
    "@next/env": "^14.2.23",
    "dayjs": "^1.11.13",
    "manage-your-appointments": "file:",
    "next": "^14.2.23",
    "nhsuk-frontend": "^8.3.0",
    "react": "^18",
    "react-dom": "^18",
    "react-hook-form": "^7.54.0"
  },
  "devDependencies": {
    "@azure/cosmos": "^4.2.0",
    "@playwright/test": "^1.49.1",
    "@testing-library/dom": "^10.4.0",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.1.0",
    "@testing-library/user-event": "^14.5.2",
    "@types/jest": "^29.5.14",
    "@types/node": "^20",
    "@types/react": "^18",
    "@types/react-dom": "^18",
    "@typescript-eslint/eslint-plugin": "^5.61.0",
    "@typescript-eslint/parser": "^5.61.0",
    "dotenv": "^16.4.7",
    "eslint": "^8",
    "eslint-config-next": "14.2.20",
    "eslint-config-prettier": "^9.1.0",
    "eslint-import-resolver-typescript": "^3.7.0",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "eslint-plugin-react": "^7.37.2",
    "eslint-plugin-react-hooks": "^4.6.2",
    "husky": "^9.1.7",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "jest-junit": "^16.0.0",
    "lint-staged": "^15.2.11",
    "postcss": "^8",
    "prettier": "^3.4.2",
    "rimraf": "^6.0.1",
    "stylelint": "^15.10.2",
    "stylelint-config-sass-guidelines": "^10.0.0",
    "stylelint-prettier": "^4.0.2",
    "typescript": "^5"
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx}": [
      "eslint --fix",
      "prettier --write --list-different"
    ],
    "*.{scss,css}": [
      "stylelint --fix",
      "prettier --write --list-different"
    ]
  },
  "overrides": {
    "glob": "10.4.5"
  }
}
