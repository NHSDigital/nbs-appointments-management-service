{
  "compilerOptions": {
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "types": ["@testing-library/jest-dom"],
    "paths": {
      "@components/*": ["./src/app/lib/components/*"],
      "@nhsuk-frontend-components": [
        "./src/app/lib/components/nhsuk-frontend/index"
      ],
      "@types": ["./src/app/lib/types/index"],
      "@services/*": ["./src/app/lib/services/*"],
      "@testing/*": ["./src/app/testing/*"],
      "@sorting": ["./src/app/lib/sorting/index"],
      "@constants": ["./src/constants"],
      "@testing-page-objects": ["./testing/page-objects/index"]
    },
    "target": "ES2017"
  },
  "include": ["**/*.ts", "**/*.tsx", ".next/types/**/*.ts", "src"],
  "exclude": ["node_modules"]
}

